        <a class="link" href="/articles/favorite-articles">Favorite Articles</a>
    </nav>
</div>
<h1 class="headTitle">Breaking News</h1>
<body>
{% for article in articles %}
    <div class="article">
        <p class="articleUrlTitle"><a href="{{ article.getUrl }}" target="_blank">{{ article.getTitle }}</a></p>
        <p class="articleDescription">{{ article.getDescription }}</p>
        <a href="{{ article.url }}" target="_blank">
            <p class="image"><img src="{{ article.getImage }}" alt=""/></p>
        </a>
        <form method="post" action="/articles">
            <label>
                <input type="hidden" value="{{ article.getTitle }}" name="title"/>
                <input type="hidden" value="{{ article.getDescription }}" name="description"/>
                <input type="hidden" value="{{ article.getUrl }}" name="url"/>
                <input type="hidden" value="{{ article.getImage }}" name="image"/>
            </label>
            <div class="addToFavorites">
                <button type="submit">Add To Favorites</button>
            </div>
        </form>
    </div>
{% endfor %}
